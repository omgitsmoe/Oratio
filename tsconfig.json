{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["dom", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    // to skip mismatching type declarations TS2717 when multiple
    // versions are installed in node_modules
    "skipLibCheck": true
  },
  "exclude": [
    "test",
    "release",
    "src/main.prod.js",
    "src/renderer.prod.js",
    "src/preloadMain.js",
    "src/dist",
    ".erb/dll"
  ],
  "include": ["**/*", "decs.d.ts"]
}
